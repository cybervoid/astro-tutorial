---
interface Props {
  title: string;
}

const { title } = Astro.props;
const isDev = import.meta.env.DEV;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {isDev ? (
      <script type="module" src="/src/scripts/shoelace.ts"></script>
    ) : (
      <>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.20.1/dist/themes/light.css" />
        <script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.20.1/dist/shoelace.js"></script>
      </>
    )}
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --sl-color-primary-50: #f0f9ff;
    --sl-color-primary-100: #e0f2fe;
    --sl-color-primary-200: #bae6fd;
    --sl-color-primary-300: #7dd3fc;
    --sl-color-primary-400: #38bdf8;
    --sl-color-primary-500: #0ea5e9;
    --sl-color-primary-600: #0284c7;
    --sl-color-primary-700: #0369a1;
    --sl-color-primary-800: #075985;
    --sl-color-primary-900: #0c4a6e;
    --sl-color-primary-950: #082f49;
  }

  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background-color: var(--sl-color-neutral-50);
  }
</style> 